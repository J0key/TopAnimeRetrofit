<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/main"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="135dp"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_image_Rick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="fitXY"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_title_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title_rick"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:textColor="@color/white"
        android:text="Source :"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_source_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title_rick"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/source"
        android:text="Manga"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_status_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/source"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:textColor="@color/white"
        android:text="Finished Airing"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_episode_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_status_rick"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="64"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_duration_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_episode_rick"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="24 min per ep"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_rating_rick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_duration_rick"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:textColor="@color/white"
        android:text="R - 17+ (violence profanity)"
        android:textSize="18sp" />





</RelativeLayout>
